{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-origin-ordered-imports-rule"
  ],
  "rulesDirectory": [
    "node_modules/tslint-origin-ordered-imports-rule/dist"
  ],
  "rules": {
    "quotemark": [true, "single", "jsx-double"],
    "member-access": false,
    "member-ordering": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "origin-ordered-imports": [true, "one-blank-line"],
    "variable-name": [true, "allow-pascal-case", "ban-keywords", "check-format"],
    "max-line-length": [true, { "limit": 140, "ignore-pattern": "^import |^export {(.*?)}" }],
    "jsx-boolean-value": false,
    "jsx-no-multiline-js": false
  },
  "linterOptions": {
    "exclude": [
      "node_modules"
    ]
  }
}
